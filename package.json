{
  "name": "sih_project",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo scripts for frontend (Vite) and backend (Flask)",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "dev": "concurrently -n frontend,backend -c green,cyan \"npm:dev:frontend\" \"npm:dev:backend\"",
    "build": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
